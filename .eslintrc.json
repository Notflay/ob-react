{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "overrides": [
    {
      "files": ["*.jsx", "*.js"]
    }
  ],
  "globals": {
    "document": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],

  "rules": {
    "indent": 0,
    "linebreak-style": 0,
    "react/prop-types": 0,
    "quotes": [2, "double", { "avoidEscape": true }],
    "comma-dangle": "off",
    "arrow-body-style": 0,
    "react/no-array-index-key": 0,
    "react/function-component-definition": [
      2,
      {
        "namedComponents": ["arrow-function", "function-declaration"],
        "unnamedComponents": "arrow-function"
      }
    ]
  }
}
